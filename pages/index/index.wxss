/* pages/index/index.wxss */

pages {
  box-sizing: border-box;
  font-size: 32rpx;
}

.header {
    position: relative;
    margin-bottom: 60rpx;
}
.header image{
 width: 750rpx;
 height:600rpx;

}
.sm-image{
  position: absolute;
  right: 25rpx;
  bottom: -50rpx;

}
.sm-image image{
  width:160rpx ;
  height:160rpx;
}
.container {
  width: 750rpx;
  color: #333;
  padding-left: 25rpx;
  padding-right: 25rpx;
  display: flex;
  overflow: hidden;
}

.container .left {
  width: 90rpx;
  height: 90rpx;
  background: red;
  background: no-repeat center center /100% auto;
}

.container .right {
  margin-left: 20rpx;
  width: 596rpx;
}

.name {
  width: 100%;
  height: 49rpx;
  margin-bottom: 20rpx;
  line-height: 49rpx;
}

.content {
  width: 100%;
  margin-bottom: 20rpx;
}

.images {
  width: 100%;
  display: flex;
  flex-wrap: wrap
}

.image {
  margin-left: 10rpx;
  width: 30%;
  height: 220rpx;
  background: no-repeat center center /100% auto;
}

.bottom {
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: space-between;
}

.pubtime {
  width: 126rpx;
  height: 90rpx;
  font-size: 28rpx;
  line-height: 90rpx;
}

.address {
  width: 150rpx;
  height: 90rpx;
  font-size: 28rpx;
  line-height: 90rpx;
  text-align: center;
}
